<h3>People Template</h3>

<table class="table table-bordered">
  <thead>
  <th>Name</th>
  <th>Age</th>
  <th>Action</th>
  </thead>
  <tbody>
  {{#each person in controller}}
    <tr>
      <td>{{person.name}}</td>
      <td>{{person.age}}</td>
      <td>{{#link-to "person" person }}View{{/link-to}}</td>
    </tr>
  {{else}}
  <tr>
    <td colspan="3" class="warning">No content</td>
  </tr>
  {{/each}}
  </tbody>
</table>

<ul class="list-inline">
  <li>{{#link-to "new_person"}}New Person{{/link-to}}</li>
</ul>
